<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/darkBackground</item>
        <item name="colorPrimaryDark">@color/darkBackground</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:windowBackground">@color/lightBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/lightText</item>
<!--        <item name="android:editTextBackground">@drawable/edit_text_background</item>-->
    </style>


    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/splash_screen</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

</resources>